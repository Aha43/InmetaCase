@page "/Customers"
@using InmetaCase.Business;

<MudText Typo="Typo.h1">Customers</MudText>

<MudStack>
    <MudList>
        @foreach (var customer in ViewControl.Customers)
        {
            <MudListItem>
                <MudLink Href="@customer.PageUri()">@customer.FirstName</MudLink>
            </MudListItem>
        }
    </MudList>
</MudStack>
