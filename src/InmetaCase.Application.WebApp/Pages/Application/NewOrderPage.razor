@page "/neworder/{userid:int}"

@using InmetaCase.Application.WebApp.Pages.Application.Components

<MudText Typo="Typo.h3">New Order</MudText>

<MudStack>
    <MudExpansionPanels>
        <MudExpansionPanel Text="Customer">
            <CustomerComponent Customer="ViewControl.Customer"/>
        </MudExpansionPanel>
        <MudExpansionPanel Text="Customer address">
            <AddressComponent Address="ViewControl.CustomerAddress"/>
        </MudExpansionPanel>
        <MudExpansionPanel Text="Order">
            <OrderComponent Order="ViewControl.Order" OnSaveOrder="ViewControl.SaveOrder"/>
        </MudExpansionPanel>
        <MudExpansionPanel Text="Order address">
            <AddressComponent Address="ViewControl.OrderAddress" OnSave="ViewControl.SaveOrderAddress"/>
        </MudExpansionPanel>
    </MudExpansionPanels>
</MudStack>
